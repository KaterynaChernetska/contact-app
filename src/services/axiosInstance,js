import axios from "axios";

const apiUrl = "/api/";
const token = import.meta.env.VITE_API_TOKEN;

const axiosInstance = axios.create({
  baseURL: apiUrl,
  headers: {
    Authorization: `Bearer ${token}`,
    "Content-Type": "application/json",
  },
});

export default axiosInstance;